@model RetailBankingClient.Models.Account.GetStatement

@{
    ViewData["Title"] = "GetAccountStatement";
}

<h3>Get Account Statement</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetAccountStatement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Id" class="control-label font-weight-bold">Enter Account ID</label>*@
                @Html.HiddenFor(m => m.Id)
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="fromDate" class="control-label font-weight-bold">Enter Start Date</label>
                <input type="date" id="fromDate" name="fromDate" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="toDate" class="control-label font-weight-bold">Enter End Date</label>
                <input type="date" id="toDate" name="toDate" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("HomePage", "Authentication")'" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

