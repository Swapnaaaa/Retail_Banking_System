@model BankPortal.Models.CustomerAccountViewModel

@{
    ViewData["Title"] = "Customer Account Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="main-body">



        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://www.scoliosis-rehabilitation.com/mymedia/2016/06/no-face.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.Customer.Name</h4>
                                <p class="text-secondary mb-1">@Model.Customer.DOB.ToShortDateString()</p>
                                <p class="text-muted font-size-sm">@Model.Customer.Address</p>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Name
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Date Of Birth</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.DOB.ToShortDateString()
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">PAN Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.PAN
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Customer Id</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.CustomerId
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Current Account</h6>
                                <small>Account Id</small>
                                <div class="mb-3" style="height: 5px">
                                    @Model.AccountDetails[0].AccountId
                                </div>
                                <small>Balance</small>
                                <div class="mb-3" style="height: 5px">
                                    @Model.AccountDetails[0].Balance
                                </div>
                                <br />
                                <a asp-action="GetAccountStatement" asp-controller="Customer" asp-route-id="@Model.AccountDetails[0].AccountId">
                                    <small>View Statements</small>
                                </a>

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Saving Account</h6>
                                <small>Account Id</small>
                                <div class=" mb-3" style="height: 5px">
                                    @Model.AccountDetails[1].AccountId
                                </div>
                                <small>Balance</small>
                                <div class=" mb-3" style="height: 5px">
                                    @Model.AccountDetails[1].Balance
                                </div>
                                <br />
                                <a asp-action="GetAccountStatement" asp-controller="Customer" asp-route-id="@Model.AccountDetails[1].AccountId">
                                    <small>View Statements</small>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a asp-action="ViewCustomers">Back to List</a>